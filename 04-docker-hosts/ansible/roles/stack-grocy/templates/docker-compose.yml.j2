version: '3.8'

services:
  grocy:
    image: lscr.io/linuxserver/grocy:latest
    container_name: grocy
    environment:
      - PUID=33
      - PGID=33
      - TZ=Europe/London
    volumes:
      - /opt/apps/grocy/data:/config
    networks:
      - traefik_proxy
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.grocy.rule=Host(`grocy.home.lan`) || Host(`10.0.0.22`)"
      - "traefik.http.routers.grocy.entrypoints=web"
      - "traefik.http.services.grocy.loadbalancer.server.port=80"
    restart: unless-stopped

networks:
  traefik_proxy:
    external: true
