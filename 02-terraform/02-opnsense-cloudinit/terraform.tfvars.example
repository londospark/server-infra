# Proxmox API credentials
proxmox_api_url          = "https://192.168.1.2:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform-token"
proxmox_api_token_secret = "your-api-token-secret-here"
proxmox_node             = "pve"

# OPNsense template
opnsense_template_name = "opnsense-cloudinit-template"

# OPNsense VM configuration
opnsense_vm_name   = "opnsense-router"
opnsense_vm_vmid   = 100
opnsense_cores     = 2
opnsense_sockets   = 1
opnsense_memory    = 4096
opnsense_storage   = "local-zfs"
opnsense_disk_size = "20G"

# Network configuration
wan_bridge   = "vmbr0"
wan_vlan_tag = 0  # 0 = no VLAN
lan_bridge   = "vmbr1"
lan_vlan_tag = 0

# Cloud-init configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... user@host"
wan_ip_config  = "ip=dhcp"
lan_ip_config  = "ip=192.168.20.1/24"
nameserver     = "8.8.8.8"
searchdomain   = ""
